.appCanvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.panel-title.collapse-title
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

/* Scenegraph */

ul.jqtree-tree li.jqtree-selected > .jqtree-element,
ul.jqtree-tree li.jqtree-selected > .jqtree-element:hover
	text-shadow none
	background #c8c8c8
	border-radius 5px

.jqtree-tree .jqtree-title
	color #333

/* Toolbar */
#toolbar
	position absolute
	bottom 2%
	left 10%
	right 10%
	height 100px
	text-align center
	
.brushcontainer
	background-color #000000CC
	border-radius 5px
	height 90%
	width 50px
	margin-left 5px
	margin-right 5px
	padding 5px
	text-align center
	display inline-block
	cursor pointer
	
.brushcontainer .glyphicon
	font-size 2.5em
	
.brushselect
	background-color #AAAAAACC
	