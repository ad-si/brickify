doctype html
html
	head
		meta(charset='utf-8')
		title Lowfab
		meta(viewport='width=device-width, initial-scale=1')
		if styles
			each path in styles
				link(rel='stylesheet', href=path)

	body

		nav#navBar.navbar.navbar-default.navbar-fixed-top.navbar-inverse(
		role='navigation'
		)
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(data-toggle='collapse',
					data-target='#navbarToggle')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Lowfab

				#navbarToggle.collapse.navbar-collapse

		#wrapper
			block content

		block scripts
