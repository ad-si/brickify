header
  h1
    font-weight bold

  h2
    font-size 1.8em

  .container
    max-width 900px

  .row
    display flex
    flex-wrap nowrap
    align-items center
    @media (max-width: 767px)
      flex-wrap wrap

  .pitch
    margin-top 4em
    flex 1 1 auto

  #makey
    background url('../img/makey-assembled.png')
    background-size contain
    background-repeat no-repeat
    width 355px
    height 453px
    flex 0 0 auto
    &:hover
      background url('../img/makey-disassembled.png')

  #googles
    line-height 500px


  .drop
    text-align left
    padding 2em
    padding-left 0

    .dropper
      width 15em
      line-height 3em
      font-size 1.5em
      font-weight bold
      .spinner
        display inline-block
        margin-left 30px
        top -0.4em

#examples
  display block
  text-align center
  color #fff

  #preview
    display block
    margin-bottom 2em
    padding 2em 0

    img
      width 20%
      margin 1%
