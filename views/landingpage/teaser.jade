header#teaser-carousel.carousel.slide(data-wrap='false', data-interval='false')
	.carousel-inner(role='listbox')
		.item.active
			.container
				.col-lg-8.pitch
					h1 Brickolage
					h2 Build with fancy LEGO#[sup &reg;]-compatible 3D-prints
					p.
						Take LEGO#[sup &reg;] to the next level and add custom
						3D-printed parts or convert whole 3D models into building
						blocks!
					.drop
						span.dropper.btn.btn-primary Drop a .stl file to start!
					//#buttonContainer
						#dropzone.btn.btn-primary(style='width:25em; height:5em;padding-top:1.2em;margin-bottom: 1em')
							b#droptext(style='color:white; font-size: 1.5em;') Drop a .stl file to start!
				#makey.col-lg-4
		.item
			.container
				.col-lg-6.pitch
					h1 Brickolage
					h2 Fast in-class 3D printing
					p.
						Teach your students how to use 3D-printers and produce their
						designed objects fast by replacing parts with
						LEGO#[sup &reg;] bricks.
					.drop
						span.dropper.btn.btn-primary Drop a .stl file to start!
					//#buttonContainer
						#dropzone.btn.btn-primary(style='width:25em; height:5em;padding-top:1.2em;margin-bottom: 1em')
							b#droptext(style='color:white; font-size: 1.5em;') Drop a .stl file to start!
				#googles.col-lg-6
					img(src='/img/lowfabFeatureImage.png' width='580px')

	a.left.carousel-control.builders(href='#teaser-carousel', role='button', data-slide-to='0')
		span For Builders

	a.right.carousel-control.educators(href='#teaser-carousel', role='button', data-slide-to='1')
		span For Educators
