@import '../../node_modules/jqtree/jqtree.css'
@import '../../node_modules/font-awesome/css/font-awesome.css'


*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

html
	height 100%

body
	height 100%

.appCanvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.quickConvertCanvas
	width 388px
	max-width 388px
	height 388px
	max-heigth 388px

a
	cursor pointer

#logo
	position relative
	z-index 1

#webGlWarning
	display none
	width 100%
	height 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

.panel-heading h3.collapseTitle
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

@import 'spinner.css'

#spinnerContainer
	position fixed
	top 50%
	left 50%
	.spinner
		position relative
		left -50%
		top -50%

.pluginSettingsContainer h3
	display none

.actionbutton
	margin 5px

.pluginActionsContainer
	margin-bottom 15px

#commandContainer
	position fixed
	top 0%
	right 0%
	margin-top 15px
	margin-right 10px
	z-index 2
	text-align right

.popover
	max-width 500px
