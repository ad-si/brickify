$icon-font-path ?= '/node_modules/bootstrap-styl/fonts/'

@import 'dark'

@import bootstrap
@import '../../node_modules/jqtree/jqtree.css'
@import '../../node_modules/font-awesome/css/font-awesome.css'
@import nib

@import 'app/app'
@import 'landingpage/landingpage'

#logo
	position relative
	z-index 1

#webGlWarning
	display none
	width 100%
	height 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

@import 'spinner.css'

#spinnerContainer
	position fixed
	top 50%
	left 50%
	.spinner
		position relative
		left -50%
		top -50%

.pluginSettingsContainer h3
	display none

.actionbutton
	margin 5px

.pluginActionsContainer
	margin-bottom 15px

#commandContainer
	position fixed
	top 0%
	right 0%
	margin-top 15px
	margin-right 10px
	z-index 2

.popover
	max-width 500px

input[readonly].not-readonly
	background white
	cursor default

#shareUrl
	display inline
	width 60%
	margin-left 5px
	margin-right 5px

#buttonContainer
	width 100%
	text-align center
	margin-top 5em
	margin-bottom 5em
	opacity 0

.quickConvertBackground
	width 100%
	background #404040
	padding-bottom 15px

.whatIsLowfabBackground
	width 100%
	background #606060
	padding-bottom 15px

.featuresBackground
	width 100%
	background #808080
	padding-bottom 15px

.footerBackground
	padding-top 10px
	width 100%
	//background #DDD

ul
	margin-left 25px

.keys
	margin-right 4px

.key
	text-transform capitalize
	box-shadow inset 0 0 10px #505050,0 2px 1px #1e1e1e,0 3px 0 #282828,0 4px 3px #141414
