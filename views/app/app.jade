extends ../rootLayout

block styles
	link(rel='stylesheet', href='/styles/screen.css')

block body
	#wrapper.container-fluid

		h1#logo Lowfab

		noscript
			| For full functionality of this site it is necessary to enable JavaScript.
			| Here are the
			= ' '
			a(href="http://enable-javascript.com", target="_blank")
				| instructions how to enable JavaScript in your web browser

		#canvasContainer
			canvas#canvas.appCanvas

		#commandContainer
			a#cmdShare(href="#", title="Share your work")
				img(src="/img/share.png", height="40px", alt="share")

		#controls.row
			aside#leftSidebar.col-lg-2.col-md-3.col-sm-4
				.panel.panel-default
					.panel-heading
						h4.panel-title.collapse-title(data-toggle='collapse'
							data-target='#collapseScenegraph') Scenegraph
					#collapseScenegraph.panel-collapse.collapse.in
						.panel-body
							#sceneGraphContainer
			aside#rightSidebar.col-lg-offset-8.col-lg-2.col-md-offset-6.col-md-3.col-sm-offset-4.col-sm-4
				div#workflowMenu.panel-group(role='tablist')
					div.panel.panel-default
						div.panel-heading(role='tab')
							h4.panel-title.collapse-title.collapsed(
								data-toggle='collapse'
								data-parent='#workflowMenu'
								data-target='#splitCollapse') Split
						div#splitCollapse.panel-collapse.collapse(role='tabpanel')
							div#splitMenu.panel-body
								p Coming soon.
					div.panel.panel-default
						div.panel-heading(role='tab')
							h4.panel-title.collapse-title(
								data-toggle='collapse'
								data-parent='#workflowMenu'
								data-target='#convertCollapse') Convert
						div#convertCollapse.panel-collapse.collapse.in(role='tabpanel')
							div#convertMenu.panel-body
					div.panel.panel-default
						div.panel-heading(role='tab')
							h4.panel-title.collapse-title.collapsed(
								data-toggle='collapse'
								data-parent='#workflowMenu'
								data-target='#exportCollapse') Export
						div#exportCollapse.panel-collapse.collapse(role='tabpanel')
							div#exportMenu.panel-body
								button.btn.btn-default
									span.glyphicon.glyphicon-download
									|  Download .stl file

		#webGlWarning
			p You should not see this text! Do you use a webGL ready browser?
				= ' '
				a(href='http://get.webgl.org') get.webgl.org

		#spinnerContainer
			.spinner
				div Loading...


block scripts
	script(src='/libs/webglCheck.js')
	script(src='/node_modules/json-editor/dist/jsoneditor.js')
	script(src='node_modules/mousetrap/mousetrap.min.js')
	if app.get('env') === 'development'
		script(src='/shared.js')

	// Include app script
	script(src='app.js')
	script(src='/node_modules/bootbox/bootbox.min.js')
