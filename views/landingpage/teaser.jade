header
	.container
		.col-lg-8.pitch
			h1 brickify
			h2 Faster 3D-printing with LEGO#[sup &reg;] bricks

			.drop
				label#loadButton.btn.btn-primary.dropper(for='fileInput')
					img#spinner(src='./img/spinner.gif')
					span

				input#fileInput(
					type='file'
					accept='.stl'
					style='display: none'
				)

			#educators
				#preview
					for model in models
						a(
							href = '/educators'
							draggable = 'true'
							data-hash = model.hash
						)
							img(
								src = '/img/' + model.img
								draggable = 'true'
								data-hash = model.hash
							)

				p Are you an educator? Check out our example models!

		#makey.col-lg-4
