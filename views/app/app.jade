extends ../layout

block content

	div#renderArea

	#controls.row
		aside#leftSidebar.col-lg-2
			.panel.panel-default
				.panel-heading
					h3.panel-title Scenegraph
				.panel-body
					#sceneGraphContainer
					#propertiesContainer
		aside#rightSidebar.col-lg-offset-8.col-lg-2
			.panel.panel-default
				.panel-heading
					h3.panel-title Plugins
				.panel-body
					#pluginsContainer
					#toolsContainer


	div#webGlWarning
		p You should not see this text! Do you use a webGL ready browser?
			= ' '
			a(href='http://get.webgl.org') get.webgl.org

block scripts
	script(src='/libs/FileSaver/FileSaver.js')
	script(src='/libs/Blob/Blob.js')
	//include app script
	script(src='app.js')
