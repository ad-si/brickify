*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

html
	height 100%

body
	height 100%
	padding-top 50px // Make space for navbar


canvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

a
	cursor pointer

#webGlWarning
	width: 100%
	height: 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

#controls
	padding-top 15px
	padding-bottom 15px

.panel-heading h3.collapseTitle
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

@import 'spinner.css'

#spinnerContainer
	position: fixed
	bottom: 50px
	width:100%
	text-align:center

.pluginSettingsContainer h3
	display none