extends ../rootLayout

block styles
	link(rel='stylesheet', href='/styles/screen.css')

block body
	#wrapper.container-fluid

		h1#logo Brickolage

		noscript
			| For full functionality of this site it is necessary to enable JavaScript.
			| Here are the
			= ' '
			a(href="http://enable-javascript.com", target="_blank")
				| instructions how to enable JavaScript in your web browser

		#canvasContainer
			canvas#canvas.appCanvas

		#commandContainer
			a#cmdHelp.fa.fa-keyboard-o(href="#", title="Open keyboard shortcuts")
			a#cmdShare.fa.fa-share-alt(href="#", title="Share your work")
		#controls.row
			aside#leftSidebar.col-lg-2.col-md-3.col-sm-4
				button.btn.btn-success.btn-block
					| LOAD
					br
					| drop an stl file

				h4 Edit

				.panel.panel-default
					.panel-heading
						h4.panel-title.collapse-title(data-toggle='collapse'
							data-target='#collapseObjects') Objects
					#collapseObjects.panel-collapse.collapse.in
						.panel-body
							ul#objectsContainer
				.btn-group.btn-group-justified(role='group')#brushContainer
					.btn.btn-primary#legoBrush
						| Make LEGO
						br
						img(src='img/legoBrush.png' width=64 height=64)
					.btn.btn-primary#printBrush
						| Make 3D-print
						br
						img(src='img/printBrush.png' width=64 height=64)

				.row.twoButtonRow
					.col-xs-6(style="padding-right: 2px")
						.btn.btn-primary.btn-block
							| Make everything
							br 
							| LEGO
					.col-xs-6(style="padding-left: 2px")
						.btn.btn-primary.btn-block
							| Make everything
							br
							| 3D-print
				h4 Preview

				button.btn.btn-success.btn-block
					| Check stability
				button.btn.btn-success.btn-block#buildButton
					| Show me how to build with LEGO
				#buildContainer.hidden
					br
					button.btn.btn-default.fa.fa-chevron-left#buildDecrement
					| &nbsp;Showing Layer&nbsp;
					span#currentBuildLayer 1
					| &nbsp;of&nbsp;
					span#maxBuildLayer 0
					| &nbsp;
					button.btn.btn-default.fa.fa-chevron-right#buildIncrement
					input(type='range')#buildSlider

				h4 Export

				.row.twoButtonRow
					.col-xs-6(style="padding-right: 2px")			
						.btn.btn-primary.btn-block#downloadButton
							| Download
							br 
							| stl
							br
							| for 3D printer							
					.col-xs-6(style="padding-left: 2px")
						.btn.btn-primary.btn-block
							| Download
							br
							| pdf
							br
							| LEGO instructions

			aside#rightSidebar.col-lg-offset-8.col-lg-2.col-md-offset-6.col-md-3.col-sm-offset-4.col-sm-4
		#webGlWarning
			p You should not see this text! Do you use a webGL ready browser?
				= ' '
				a(href='http://get.webgl.org') get.webgl.org

		#spinnerContainer
			.spinner
				div Loading...

block scripts
	script(src='/libs/webglCheck.js')
	script(src='node_modules/mousetrap/mousetrap.min.js')
	if app.get('env') === 'development'
		script(src='/shared.js')

	// Include app script
	script(src='app.js')
	script(src='/node_modules/bootbox/bootbox.min.js')
