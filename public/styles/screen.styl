*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

html
	height 100%

body
	height 100%
	padding-top 50px // Make space for navbar


canvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

a
	cursor pointer


#leftSidebar,
#rightSidebar
	background-color rgb(200,200,200)
	display inline-block
	width 150px
	height 100%
	overflow hidden
	position absolute
	padding-top 50px
	border-color rgb(150,150,150)
	border-style solid

#leftSidebar
	border-right-width 1px
	left 0
	top 0
	&:hover
		overflow visible

#rightSidebar
	border-left-width 1px
	right 0
	top 0

#webGlWarning
	width: 100%
	height: 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

// Make bootstrap tabs centered in the middle
.nav-tabs.nav-tabs-centered > li,
.nav-pills.nav-tabs-centered > li
	float none
	display inline-block

.nav-tabs.nav-tabs-centered,
.nav-pills.nav-tabs-centered
	text-align center
