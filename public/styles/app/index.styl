#logo
	position relative
	z-index 1

.appCanvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.panel-title.collapse-title
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

#webGlWarning
	display none
	width 100%
	height 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

@import 'spinner.css'

#spinnerContainer
	position fixed
	top 50%
	left 50%
	.spinner
		position relative
		left -50%
		top -50%

#commandContainer
	position fixed
	top 0%
	right 0%
	margin-top 15px
	margin-right 10px
	z-index 2
	a
		margin-left 5px
		margin-right 5px
input[readonly].not-readonly
	background white
	cursor default

#shareUrl
	display inline
	width 60%
	margin-left 5px
	margin-right 5px

/* Help dialog */

.keys
	margin-right 4px

.modal-content kbd
	text-transform capitalize
	box-shadow inset 0 0 10px #505050,0 2px 1px #1e1e1e,0 3px 0 #282828,0 4px 3px #141414

/* Objects container */

#objectsContainer
	user-select none
	list-style none
	padding-left 0
	margin-left 0
	
.objectListItem
	position relative
	color black
	//overflow hidden
	cursor pointer
	padding-left 2px
	z-index 1
	
.objectIconContainer
	background-color #BBBBBB

.iconFloatRight
	position absolute
	padding-right 2px
	top 0
	right 0
	z-index 3
	.glyphicon
		margin-left 2px
		margin-right 2px		
					
.brushlist
	list-style none	
	padding-left 0	
	margin-top -0.5em
	margin-left 2em
	z-index 2
	
.brushEntry
	position relative
	display block
	.glyphicon
		margin-left 2px
		margin-right 2px
		
.selectedBrush	
	border-radius 5px
	background-color #EEEEEE
	
.selectedObject
	border-radius 5px
	background-color #BBBBBB	
	
.innerShadow
	-moz-box-shadow inset 0 0 20px #000000
	-webkit-box-shadow inset 0 0 20px #000000
	box-shadow inset 0 0 20px #000000

