$icon-font-path ?= '/node_modules/bootstrap-styl/fonts/'

@import 'dark.styl'

@import bootstrap
@import '../../node_modules/jqtree/jqtree.css'
@import '../../node_modules/font-awesome/css/font-awesome.css'
@import nib


*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

html
	height 100%

body
	height 100%

.appCanvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.quickConvertCanvas
	width 388px
	max-width 388px
	height 388px
	max-heigth 388px

a
	cursor pointer

#logo
	position relative
	z-index 1

#webGlWarning
	display none
	width 100%
	height 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

.panel-heading h3.collapseTitle
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

@import 'spinner.css'

#spinnerContainer
	position fixed
	top 50%
	left 50%
	.spinner
		position relative
		left -50%
		top -50%

.pluginSettingsContainer h3
	display none

.actionbutton
	margin 5px

.pluginActionsContainer
	margin-bottom 15px

#commandContainer
	position fixed
	top 0%
	right 0%
	margin-top 15px
	margin-right 10px
	z-index 2

.popover
	max-width 500px

input[readonly].not-readonly
	background white
	cursor default

#shareUrl
	display inline
	width 60%
	margin-left 5px
	margin-right 5px

#quickConvert
	display none

#buttonContainer
	width 100%
	text-align center
	margin-top 5em
	margin-bottom 5em
	opacity 0

.quickConvertBackground
	width 100%
	background #404040
	padding-bottom 15px

.whatIsLowfabBackground
	width 100%
	background #606060
	padding-bottom 15px

.featuresBackground
	width 100%
	background #808080
	padding-bottom 15px

.footerBackground
	padding-top 10px
	width 100%
	//background #DDD

ul
	margin-left 25px

ul.jqtree-tree li.jqtree-selected > .jqtree-element,
ul.jqtree-tree li.jqtree-selected > .jqtree-element:hover
	text-shadow none
	background #c8c8c8
	border-radius 5px

.jqtree-tree .jqtree-title
	color #333
