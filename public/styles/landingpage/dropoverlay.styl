#dropoverlay
	background-color #ffffff
	width 100%
	height 100%
	display none
	pointer-events none
	opacity 0.8
	position fixed
	padding 20px

#dropborder
	width 100%
	height 100%
	border-color #606060
	border-radius 50px
	border-width 10px
	border-style dashed
	display flex
	align-items center

#dropinfo
	width 100%
	font-size 5em
	color #606060
	font-weight bold

