extends ../rootLayout
block styles
	link(rel='stylesheet', href='/styles/screen.css')

block body
	.container
		.col-lg-6
			h1
				a(href='/')#backlink brickify.it
			p Fast in-class 3D printing
			p.
				Teach your students how to 3D-print at the example of objects that
				mostly consist of LEGO#[sup &reg;] bricks, thus print fast enough to
				fit into class time.
	.container#samples
		table.table
			for sample in samples
				tr
					td.printTime
						span.fa.fa-clock-o
						|&nbsp;
						= sample.printTime
						|&nbsp;min
					td.sample
						a(href='app#initialModel='+sample.name)
							img(src='/img/modelSamples/'+sample.name+'.png')
							img.editHover(src='/img/modelSamples/editHover.png')
					td
						h3= sample.title
						p= sample.description
						.attribution
							p
								|"
								a(href= sample.originalLink)= sample.originalName
								|" by&nbsp;
								a(href= sample.creatorLink)= sample.creator
								|, used under&nbsp;
								a(href= sample.licenseLink)= sample.license
								|&nbsp;*
					td.download
						a.btn.btn-success.notAvailable Get course material!
			tr
				td.printTime
				td.sample
				td
					h3 Thingiverse
					p Search thingiverse. You can use Brickolage with any .stl file.
					form.form-inline.form-group(action='http://www.thingiverse' +
					'.com/search')
						input.form-control(name='q' placeholder='Enter a search term')
						button.btn.btn-default(type='submit') Search
				td
			tr
				td.printTime
				td.sample
					a(href='/app')
						img(src='/img/modelSamples/custom.png')
						img.editHover(src='/img/modelSamples/editHover.png')
				td
					h3 Custom
					p Click here if you want to use your own models
				td
		|* Modified from original.

	include footer

	include feedback

block scripts
	// TODO remove these
	script(src='/node_modules/jquery/dist/jquery.min.js')
	script(src='/node_modules/bootstrap/dist/js/bootstrap.min.js')
	script(src='/node_modules/bootbox/bootbox.js')
	script(src='/libs/notAvailable.js')
