*
	margin 0
	padding 0
	border 0
	font-size 100%
	box-sizing border-box

html
	height 100%

body
	height 100%
	padding-top 50px

// Make space for navbar

canvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

a
	cursor pointer


#sceneGraphSidebar
#toolsSidebar
	background-color rgb(200,200,200)
	display inline-block
	width 150px
	height 100%
	position absolute
	padding-top 50px
	border-color rgb(150,150,150)
	border-style solid

#sceneGraphSidebar
	border-right-width 1px
	left 0
	top 0

#toolsSidebar
	border-left-width 1px
	right 0
	top 0
