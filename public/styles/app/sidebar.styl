#leftSidebar
	height 100%
	overflow hidden
	background-color rgba(0,0,0,0.4)
	position absolute
	top 0
	left 0
	.btn
		white-space normal

	.twoButtonRow
		margin-bottom 5px
		:last-child
			padding-left 2px
		:first-child
			padding-right 2px

	div.disabled
		opacity 0.5

	#loadGroup
		#loadButtonFeedback .spinner
			display inline-block
			margin-left 20px
			top -5px

	#brushContainer
		div
			font-size 0.90em

	#buildContainer
		display block
		text-align center

	#exportGroup
		margin-bottom 2em

