#dropoverlay
  background-color #ffffff
  width 100%
  height 100%
  pointer-events none
  position fixed
  padding 20px
  z-index 10000

#dropborder
  width 100%
  height 100%
  border-color #606060
  border-radius 50px
  border-width 10px
  border-style dashed
  display flex
  align-items center

#dropinfo
  width 100%
  font-size 5em
  color #606060
  font-weight bold
