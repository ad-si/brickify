#logo
	position relative
	z-index 1

.appCanvas
	position fixed
	top 0
	left 0
	width 100%
	height 100%

.panel-title.collapse-title
	cursor pointer
	&:after
		font-family 'Glyphicons Halflings'
		content '\e114'
		float right
		color grey
	&.collapsed:after
		content '\e080'

#webGlWarning
	display none
	width 100%
	height 100%
	padding-top 4em
	padding-left 170px
	padding-right 170px

@import 'spinner.css'

#spinnerContainer
	position fixed
	top 50%
	left 50%
	.spinner
		position relative
		left -50%
		top -50%

#commandContainer
	position fixed
	top 0%
	right 0%
	margin-top 15px
	margin-right 10px
	z-index 2

input[readonly].not-readonly
	background white
	cursor default

#shareUrl
	display inline
	width 60%
	margin-left 5px
	margin-right 5px

/* Scenegraph */

ul.jqtree-tree li.jqtree-selected > .jqtree-element,
ul.jqtree-tree li.jqtree-selected > .jqtree-element:hover
	text-shadow none
	background #c8c8c8
	border-radius 5px

.jqtree-tree .jqtree-title
	color #333

/* Help dialog */

.keys
	margin-right 4px

.modal-content kbd
	text-transform capitalize
	box-shadow inset 0 0 10px #505050,0 2px 1px #1e1e1e,0 3px 0 #282828,0 4px 3px #141414

/* Toolbar */
#toolbar
	position absolute
	bottom 2%
	left 10%
	right 10%
	height 120px
	text-align center
	
.brushlayout
	height 95%
	minimal-width 50px
	display inline-block
	text-align left
	
.brushcontainer
	background-color #000000CC
	border-radius 5px
	height 90%
	minimal-width 50px
	margin-left 5px
	margin-right 5px
	padding 5px
	text-align center
	display inline-block
	cursor pointer
	
.brushcontainer img
	width 64px
	height 64px

.brushdeselect
	background-color #000000CC
	
.brushselect
	background-color #AAAAAACC
	
.visibilityIcon
	position relative
	left 15%
	font-size 1.5em
	cursor pointer
	
#objectsContainer
	user-select none
	list-style none
	padding-left 0
	margin-left 0
	
.objectListItem
	position relative
	color black
	overflow hidden
	cursor pointer
	padding-left 2px
	border-radius 5px
	z-index 1
	
.objectIconContainer
	background-color #BBBBBB
	border-radius 5px

.iconFloatRight
	position absolute
	padding-right 2px
	top 0
	right 0
	z-index 3
	.glyphicon
		margin-left 2px
		margin-right 2px
				
.brushlist
	list-style none	
	padding-left 0	
	margin-top -0.5em
	margin-left 2em
	z-index 2
	
.brushEntry
	position relative
	display block
	.glyphicon
		margin-left 2px
		margin-right 2px
		
.selectedBrush
	background-color #EEEEEE
	
.selectedObject
	background-color #BBBBBB